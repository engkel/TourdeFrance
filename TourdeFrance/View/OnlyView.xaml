             <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Label Content="Name: "/>
                        <Label Content="{Binding Name}" FontWeight="Bold" />
                        <Label Content=" NickName: "/>
                        <Label Content="{Binding NickName}" FontWeight="Bold" />
                    </WrapPanel>
                </DataTemplate>
                </ListView.ItemTemplate>-->
 
</Window>
